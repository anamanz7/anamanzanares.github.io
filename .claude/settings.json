{
  "permissions": {
    "allow": [
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git pull:*)",
      "Bash(git branch:*)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(cat:*)",
      "Bash(python3:*)",
      "Bash(chmod:*)",
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(open:*)",
      "Bash(gs:*)",
      "Bash(convert:*)",
      "Bash(identify:*)",
      "Bash(file:*)",
      "Bash(du:*)",
      "Bash(wc:*)",
      "Read(**/*.html)",
      "Read(**/*.css)",
      "Read(**/*.js)",
      "Read(**/*.md)",
      "Read(**/*.sh)",
      "Read(**/*.py)",
      "Read(**/*.json)",
      "Edit(**/*.html)",
      "Edit(**/*.css)",
      "Edit(**/*.js)",
      "Edit(**/*.md)",
      "Edit(**/*.sh)",
      "Edit(**/*.py)",
      "Edit(**/*.json)",
      "Write(**/*.html)",
      "Write(**/*.css)",
      "Write(**/*.js)",
      "Write(**/*.md)",
      "Write(**/*.sh)",
      "Write(**/*.py)",
      "Write(**/*.json)",
      "Write(**/*.txt)"
    ],
    "ask": [
      "Bash(rm:*)",
      "Bash(rmdir:*)",
      "Bash(git reset:*)",
      "Bash(git rebase:*)",
      "Bash(git push:* --force*)",
      "Write(**/*.pdf)",
      "Edit(**/*.pdf)"
    ],
    "deny": [
      "Read(.env)",
      "Read(.env.*)",
      "Read(**/*.key)",
      "Read(**/*.pem)",
      "Read(**/*secret*)",
      "Read(**/*password*)",
      "Write(.env)",
      "Write(.env.*)",
      "Edit(.env)",
      "Edit(.env.*)",
      "Bash(sudo:*)",
      "Bash(curl:* | bash)",
      "Bash(wget:* | bash)"
    ]
  },
  "env": {
    "LANG": "es_ES.UTF-8",
    "PROJECT_NAME": "my-life",
    "PORTFOLIO_DIR": "PORTFOLIO"
  },
  "outputStyle": "Explanatory"
}
